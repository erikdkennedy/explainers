{
  "name": "explainers",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "sass src/scss:src/assets/css && eleventy",
    "serve": "npm-run-all --parallel sass:watch eleventy:serve",
    "sass:watch": "sass --watch src/scss:src/assets/css",
    "eleventy:serve": "eleventy --serve",
    "clean": "rimraf _site src/assets/css"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "markdown-it": "^14.1.0",
    "markdown-it-attrs": "^4.3.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "sass": "^1.77.6",
    "terser": "^5.44.0"
  }
}
